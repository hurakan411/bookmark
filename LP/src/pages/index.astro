---
import BaseLayout from "../layouts/BaseLayout.astro";
import Container from "../components/container.astro";
import SimpleHero from "../components/SimpleHero.astro";
import FeatureSummary from "../components/FeatureSummary.astro";
import FeatureDetails from "../components/FeatureDetails.astro";
import SimpleFAQ from "../components/SimpleFAQ.astro";
import Footer from "../components/Footer.astro";

const title = "AI Bookmark Manager — AI機能搭載のブックマーク管理アプリ";
const description =
  "AI Bookmark Managerはフォルダ自動整理など、AIがサポートしてくれるブックマーク管理アプリ。";
---

<BaseLayout {title} {description}>
  <Container>
    <main>
      <SimpleHero />
      <FeatureSummary />
      <FeatureDetails />
      <SimpleFAQ />
    </main>
    <Footer />
  </Container>
</BaseLayout>
