---
interface Props {
	href: string;
	size?: "xs" | "sm" | "md" | "lg";
	block?: boolean;
	style?: "outline" | "primary" | "muted";
	class?: string;
	[x: string]: any;
}

const {
	href,
	block,
	size = "md",
	style = "primary",
	class: className,
	...rest
} = Astro.props;

const sizes = {
	xs: "px-2 py-1 text-xs",
	sm: "px-3 py-1.5 text-sm",
	md: "px-4 py-2.5 text-sm",
	lg: "px-5 py-3 text-base",
};

const styles = {
	outline:
		"text-center border-2 transition-all border-white/20 text-white hover:border-white/40 hover:bg-white/5 rounded-full",
	primary:
		"bg-primary-500 text-white hover:bg-primary-400 shadow-glow shadow-primary-500/40 hover:-translate-y-0.5 rounded-full transition-all",
	muted: "text-slate-400 hover:text-slate-200 transition-colors",
};
---

<a
	{...rest}
	href={href}
	class:list={[
		"inline-flex items-center justify-center gap-2 font-semibold focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-400 focus-visible:ring-offset-2",
		block && "w-full",
		sizes[size],
		styles[style],
		className,
	]}>
	<slot />
</a>
